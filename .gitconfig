[include]
        path = ~/.gitconfig.local
[color]
        ui = always
[color "grep"]
        filename = red
        linenumber = red
        match = yellow reverse
        context = cyan
        #selected = white bold
[alias]
        co = checkout
        current-branch = !git symbolic-ref HEAD|sed -e 's/refs.heads.//'
        br = branch
        ci = commit -a
        df = diff
        idff = diff
        dwc = diff -w -M --color-words
        lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
        ll = log -p
        rb = rebase
        ggrep = grep --heading --break
        fix = rebase -i origin/master
        rba = rebase --abort
        rbc = rebase --continue
        re = remote
        st = status -sb
        sup = "submodule foreach 'git co master; git up'"
        #sup = submodule foreach git pull origin master
        todo = grep --ignore-case "TODO"
        tree = log --graph --decorate --pretty=oneline --abbrev-commit --all
        up = pull --rebase
[core]
        editor = emacs
        excludesfile = /Users/ronshapiro/.gitignore
        pager = less -+$LESS -FRX
[rerere]
        enabled = 1
[branch "master"]
        remote = origin
        merge = refs/heads/master
[grep]
        lineNumber = true
